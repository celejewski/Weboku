@inject IGameTimerProvider GameTimerProvider
@inject CommandProvider CommandProvider
@inject ISudokuProvider SudokuProvider

<div class="text-center">
    <h1 class="modal__title with-hr">solved</h1>
    <span class="modal__subtitle">Congratulations you did it!</span>
</div>

<div class="modal__content">
    <div class="modal__result-row">
        <span class="modal__result-label">Your time</span>
        <span class="modal__result-value">@GameTimerProvider.Elapsed.ToString("mm\\:ss")</span>
    </div>
    <div class="modal__result-row">
        <span class="modal__result-label">Difficulty</span>
        <span class="modal__result-value">@SudokuProvider.Sudoku.Difficulty</span>
    </div>
</div>

<div class="modal__footer with-hr">
    <ModalButtonComponent OnClick="CommandProvider.ShowNewGameModal()"
                          IsSecondary="true">
        Play again
    </ModalButtonComponent>
</div>

