@inject CandidatesMarkProvider CandidatesMarkProvider
@inject IGridProvider GridProvider
@using UI.BlazorWASM.Converters
@using UI.BlazorWASM.Enums

<div class="mark__candidate @_currentClass"></div>

@code {
    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public int Z { get; set; }

    private InputValue _value => (InputValue)  Z + 1;

    private string _currentClass => CellColorConverter.ToCssClass(_currentColor);

    private Color _previousColor;
    private Color _currentColor
    {
        get
        {
            var isIllegal = GridProvider.HasCandidate(X, Y, _value) && !GridProvider.IsCandidateLegal(X, Y, _value);
            return isIllegal ? Color.Illegal : CandidatesMarkProvider.GetColor(X, Y, (int) _value);
        }
    }

    protected override void OnInitialized()
    {
        GridProvider.OnCandidatesChanged += StateHasChanged;
        CandidatesMarkProvider.OnChanged += StateHasChanged;
    }

    protected override bool ShouldRender()
    {
        return _previousColor != _currentColor;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        _previousColor = _currentColor;
    }
}
