@inject CommandProvider CommandProvider

<div class="menu">
    <div class="menu__item">
        <DropdownMenuComponent>
            <Header> 
                <MenuLabelComponent>Menu</MenuLabelComponent>
            </Header>
            <Content>
                <MenuLinkComponent OnMouseDown="CommandProvider.ShowMainMenuModal()">Main menu</MenuLinkComponent>
                <MenuLinkComponent OnMouseDown="CommandProvider.ShowShareModal()">Share</MenuLinkComponent>
                <MenuLinkComponent OnMouseDown="CommandProvider.RestartGame()">Restart game</MenuLinkComponent>
                <MenuLinkComponent OnMouseDown="CommandProvider.ShowHowToPlayModal()">How to play</MenuLinkComponent>
                <MenuLinkComponent OnMouseDown="CommandProvider.ShowHintModal()">Show hint</MenuLinkComponent>
            </Content>
        </DropdownMenuComponent>
    </div>
    <div class="menu__item">
    </div>
    <div class="menu__item">
        <DropdownMenuComponent>
            <Header>
                <MenuLabelComponent>Candidates</MenuLabelComponent>
            </Header>
            <Content>
                <MenuLinkComponent OnMouseDown="CommandProvider.FindAllCandidates()">Find all</MenuLinkComponent>
                <MenuLinkComponent OnMouseDown="CommandProvider.ClearCandidates()">Remove all</MenuLinkComponent>
            </Content>
        </DropdownMenuComponent>
    </div>
</div>

