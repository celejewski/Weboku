<div class="grid-wrapper">
    <div class="grid">
        @for( int y = 0; y < 9; y++ )
        {
            @for( int x = 0; x < 9; x++ )
            {
                var cell = Cells[x, y];
                <CellComponent @bind-Cell="cell"
                               @bind-SelectedValue="SelectedValue"
                               OnClickCallback=" () => OnCellLeftClick(cell)"
                               OnRightClickCallback="() => OnCellRightClick(cell)">
                </CellComponent>
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public int SelectedValue { get; set; }

    [Parameter]
    public ICell[,] Cells { get; set; }

    [Parameter]
    public Action<ICell> OnCellLeftClick { get; set; }

    [Parameter]
    public Action<ICell> OnCellRightClick { get; set; }
}