<div class="layer grid-9x9">
    @for( int y = 0; y < 9; y++ )
    {
        for( int x = 0; x < 9; x++ )
        {
            int block = (y / 3) * 3 + (x / 3);
            string blockParity = block % 2 == 1 ? "even" : "odd";
            <div class="grid-9x9__cell 
                        grid-9x9__cell--@blockParity">
                @ChildContent((x, y))
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public RenderFragment<(int x, int y)> ChildContent { get; set; }
}
