@inject ModalProvider ModalProvider
@inject ShareProvider ShareProvider

@if( ModalProvider.CurrentState == Modals.ModalState.Share )
{
    <Grid9x9Component>
        <div class="input">
            @{
                var value = ShareProvider.Grid.Cells[context.x, context.y].Input.Value;
                if( value != 0 )
                {
                    @value;
                }
            }
        </div>
    </Grid9x9Component>
}

@code {

    protected override void OnInitialized()
    {
        ModalProvider.OnChanged += StateHasChanged;
        ShareProvider.OnChanged += StateHasChanged;
    }
}
